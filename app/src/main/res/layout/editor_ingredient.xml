<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">


    <EditText
        android:id="@+id/ingredientInputEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter ingredient (e.g., '2 liters Milk')" />

    <EditText
        android:id="@+id/ingredientExpirationEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Expiration Date (YYYY-MM-DD)" />

    <EditText
        android:id="@+id/ingredientPriceEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Price" />
</LinearLayout>